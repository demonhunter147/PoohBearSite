    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link href="@Url.Content("~/Content/CSS/Homepage.css")" rel="stylesheet" type="text/css" />
}

<script>

    function slideDownAgain(){
        $("#cover-div").stop().fadeIn(1500)
    }

    function stickyInit($) {

        function check_sticky() {
            if (clicks<1) {
                slideDownAgain();
            }

        }

        function decreaseClicks() {
            clicks = 0
        }

        //function decreaseClicks(clicks) {
        //    for (var i; i = -1;);
        //}

        window.setInterval(check_sticky, 3000);
        window.setInterval(decreaseClicks, 8000);
    }

    jQuery(document).ready(function ($) {

        stickyInit($);

    });

    var clicks = 0;

    $(document).ready(function () {

        $(".carousel-control, .carousel-indicators").click(function () {
            clicks++;
            $("#cover-div").fadeOut(1000);
        });
    })
    

    $('body').scrollspy({ target: '' })

</script>

<section class="block">
    <div id="mycarousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#mycarousel" data-slide-to="0" class="active"></li>
            <li data-target="#mycarousel" data-slide-to="1"></li>
            <li data-target="#mycarousel" data-slide-to="2"></li>
        </ol>
        <div id="cover-div">
            <div id="slider-overlay">
            </div>
        </div>
        <div class="carousel-inner">
            <div class="item active">
                <img src="~/Content/Images/Slide-image-1.png" />
            </div>
            <div class="item">
                <img src="~/Content/Images/Slide-image-2.png" />
            </div>
            <div class="item">
                <img src="~/Content/Images/Slide-image-3.png" />
            </div>
        </div>
        <!-- Controls -->
        <a class="left carousel-control" href="#mycarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
        </a>
        <a class="right carousel-control" href="#mycarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
        </a>
    </div>

</section>

