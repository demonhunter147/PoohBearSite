    <link href="@Url.Content("~/Content/CSS/Homepage.css")" rel="stylesheet" type="text/css" />
}

<script>

    var myVar;

    function returnToContact() {
        $('#bs-example-navbar-collapse-1 > ul > li:nth-child(3) > a')[0].click();
    }

    function setFailedTime() {
        myVar = setTimeout(failedHidden, 10000);
    }

    function setSuccessfulTime() {
        myVar = setTimeout(successfulHidden, 10000);
    }

    function successfulHidden() {
        $("#Successful").addClass('hidden');
    }


    function successfulSend() {
        $("#Successful").removeClass('hidden');
        setSuccessfulTime();
    }

    function failedSend() {
        $('#Failed').removeClass('hidden');
        setFailedTime();

    }

    function failedHidden() {
        $("#Failed").addClass('hidden');
    }

     @if (ViewBag.Status == "ValidationError")
     {
         <text>
            returnToContact();
         </text>
     }

    @if (ViewBag.Status == "SendSuccess")
    {
        <text>
    returnToContact();

    $(document).ready(function (){
        successfulSend();
    })
        </text>
    }

    @if (ViewBag.Status == "SendFailure")
        {
            <text>
    returnToContact();

    $(document).ready(function (){
        failedSend();
    })
            </text>
        }



    function slideDownAgain(){
        $("#cover-div").stop().fadeIn(1500)
    }

    function stickyInit($) {

        function check_sticky() {
            if (clicks<1) {
                slideDownAgain();
            }

        }

        function decreaseClicks() {
            clicks = 0
        }

        //function decreaseClicks(clicks) {
        //    for (var i; i = -1;);
        //}

        window.setInterval(check_sticky, 3000);
        window.setInterval(decreaseClicks, 8000);
    }

    jQuery(document).ready(function ($) {

        stickyInit($);

    });

    var clicks = 0;

    $(document).ready(function () {

        $(".carousel-control, .carousel-indicators").click(function () {
            clicks++;
            $("#cover-div").fadeOut(1000);
        });
    })


    $('body').scrollspy({ target: '' })

</script>

<section class="block">
